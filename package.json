{
  "name": "xrelease",
  "version": "0.1.3",
  "description": "xrelease (pronounced cross-release) helps you setup automated releases for your project for any language",
  "main": "dist/index.js",
  "bin": {
    "xrelease": "./dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:link": "npm run build && chmod +x dist/cli/index.js && npm link",
    "build:relink": "npm unlink xrelease && npm run build:link",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "release": "npm run build:relink && xrelease create --ci",
    "generate-changelog": "node scripts/generate-changelog.js"
  },
  "keywords": [
    "release",
    "cross-language",
    "polyglot",
    "release-automation",
    "ci",
    "cd",
    "automation",
    "versioning",
    "changelog",
    "python",
    "golang",
    "scala",
    "nodejs",
    "swift",
    "release-management"
  ],
  "author": "Anand Kamat",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "glob": "^10.3.10",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "semver": "^7.7.1",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.24",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matsilva/xrelease.git"
  }
}